%li.dropdown
  %a.dropdown-toggle{ :href => "#", :"data-toggle" => "dropdown" }
    = current_user.firstname
    %span.caret
  %ul.dropdown-menu
    - if current_user.admin?
      %li= link_to 'Admin Dashboard', admin_dashboard_path
      %li.divider
    %li= link_to 'Sign out', admin_sessions_path, method: :delete
