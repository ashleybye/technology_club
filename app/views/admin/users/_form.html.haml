= simple_form_for [:admin, @user], defaults: { input_html: { class: 'form-control' } } do |f|
  = f.input :firstname
  = f.input :lastname
  = f.input :email
  = f.input :password
  = f.input :password_confirmation
  - unless current_user?(@user)
    = f.input :admin, collection: [["No", false], ["Yes", true]], default: false, label: "Is user an administrator?"
  = f.submit class: 'btn btn-default'
  = link_to 'Cancel', admin_users_path, class: 'btn'
