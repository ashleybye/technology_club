<% content_for(:title, 'Contact Us') %>

<div class="row">
	<div class="small-12 columns">
		<h1>Contact Us</h1>
	</div>
</div>

<div class="row">
	<div class="small-12 columns">
		<%= form_for(@message, url: contact_us_path, builder: FoundationFormBuilder) do |f| %>
			
			<%= f.text_field :name %>

			<%= f.text_field :email %>

			<%= f.text_area :comment, label: "Message", rows: 10 %>

			<%= f.submit "Send", class: "button round right" %>
		<% end %>
	</div>
</div>