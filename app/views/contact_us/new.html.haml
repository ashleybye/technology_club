- content_for(:title, 'Contact Us | YMTEC')
.container
  .row
    .col-xs-12
      %h1 Contact Us
.container
  .row
    .col-xs-12
      = simple_form_for @message, url: contact_us_path, defaults: { input_html: { class: 'form-control' } } do |f|
        = f.input :name
        = f.input :email
        = f.input :comment, label: "Message", input_html: { rows: 10 }
        = f.submit "Send", class: "btn btn-default"
