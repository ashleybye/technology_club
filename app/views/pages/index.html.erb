	</div>

	<div class="header-large">
		<div class="row">
			<div class="large-push-2 medium-push-2 large-8 medium-8 small-12 columns text-center">
				<%= image_tag(image_path('logo.png'), id: 'logo') %>
			</div>
		</div>
	</div>
<% end %>

<section id="slide-1" class="homeSlide">
	<div class="slide-background"
        data-top="background-position: 0px 0px;"
        data-top-bottom="background-position: 0px -200px;"
        data-anchor-target="#slide-1">
    <article class="over-photo" data-center="opacity: 1" data-anchor-target="#slide-1 article">
    	<div class="row">
    		<div class="large-push-2 medium-push-2 large-8 medium-8 small-12 columns text-center">
		      <h1>Young Engineering and Technology Club</h1>
				</div>
			</div>
		</article>
	</div>
</section>

<section id="slide-2">
	<div class="plain-slide-background" data-anchor-target="#slide-2">
		<div class="content-slide">
			<article data-anchor-target="#slide-2 article" id="news" data-menu-offset="-250">
				<div class="row">
					<% if @newsitem %>
						<div class="small-8 columns">
							<h4 class="newsitem">
								<%= link_to @newsitem.title, @newsitem %>
								<span>
									Posted on <%= @newsitem.created_at.strftime('%A %-d %B %Y') %>
									at <%= @newsitem.created_at.strftime('%l:%M %p') %>
								</span>
							</h4>
							<p>
								<%= @newsitem.content %>
							</p>
						</div>
					<% else %>
					<div class="small-8 columns">
						<h4 class="newsitem">There is no news!</h4>
					</div>
					<% end %>
					<div class="small-4 columns">
						<h1>Latest News</h1>
						<p><%= link_to 'All news &raquo;'.html_safe, newsitems_path %></p>
					</div>
				</div>
			</article>
		</div>
	</div>
</section>

